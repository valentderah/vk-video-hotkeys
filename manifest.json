{
  "manifest_version": 3,
  "name": "Горячие клавиши ВК Видео",
  "version": "1.3.0",
  "description": "Верни привычные для ютуба горячие клавиши в ВК Видео!",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/settings.html"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://vk.com/video*",
        "https://vkvideo.ru/*",
        "https://vkvideo.com/*",
        "https://vkvideo.by/*"
      ]
    }
  ]
}
