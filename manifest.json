{
  "manifest_version": 3,
  "name": "Горячие клавиши ВК Видео",
  "version": "1.2.1",
  "description": "Позволяет вернуть привычное для ютуба управление",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/settings.html"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://vk.com/video*"
      ]
    }
  ]
}
